docker.enabled = true

process {
  cpus = 2
}

params {
    outdir = './results'
    email = ''
    email_on_fail = false
    tracedir = "${params.outdir}/pipeline_info"
    test_nfb_path = "${projectDir}/modules/pipelines/${params.pipeline}/conf/test_nfb.config"
}

// TODO create a test profile for t-coffee demo
profiles {
    //test { includeConfig "${projectDir}/modules/$params.pipeline/conf/test.config" }
    // baseDir will be deprecated in new nextflow version in favor of projectDir
    test_nfb { includeConfig "${params.test_nfb_path}" }  //issue #19 use params.modules_path
    docker { docker.enabled = true
             docker.scratch = true }
}

report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}