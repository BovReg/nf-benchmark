docker.enabled = true

params.outdir = './results'
params.method = 'tcoffee'

process {
  cpus = 2
}

profiles {
    test { includeConfig "${projectDir}/modules/$params.pipeline/conf/test.config" }
    //test { includeConfig '/Users/jaespinosa/git/nf-benchmark/modules/regressive_alignment/conf/test.config' }
    docker { docker.enabled = true
             docker.scratch = true }
}

params {
    outdir = './results'
    email = ''
    email_on_fail = false
    tracedir = "${params.outdir}/pipeline_info"
}

report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}