docker.enabled = true

process {
  cpus = 2
}

params {
    outdir = './results'
    email = ''
    email_on_fail = false
    tracedir = "${params.outdir}/pipeline_info"

    // Pipelines related params
    pipeline = ""
    path_to_pipelines = "${projectDir}/modules/pipelines"
    pipeline_path = "${params.path_to_pipelines}/${params.pipeline}" // remove and directly
    test_nfb_path = "${pipeline_path}/conf/test_nfb.config"

    // Benchmark related params
    path_to_benchmarkers = "${projectDir}/modules/benchmarkers"
}

// includeConfig "${baseDir}/modules/pipelines/${params.pipeline}/nextflow.config"

profiles {
    docker { docker.enabled = true
             docker.scratch = true }
    test { includeConfig "${projectDir}/conf/test.config" }
    // test_nfb { includeConfig "${params.test_nfb_path}" }
    test_nfb {
        try {
            includeConfig "$params.test_nfb_path"
        } catch (Exception e) {
            System.err.println("ERROR: The selected pipeline \"${params.pipeline}\" needs a test configuration for nf-benchmark")
            System.exit(0)
        }
    }
}

report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}